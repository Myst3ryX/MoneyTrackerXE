<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_pattern"
    tools:context="com.myst3ry.moneytrackerxe.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/padding_large"
        android:paddingStart="@dimen/padding_large">

        <EditText
            android:id="@+id/article_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:hint="@string/article_hint"
            android:inputType="text"
            android:maxLines="1"
            android:textSize="@dimen/sp_large" />

        <EditText
            android:id="@+id/amount_field"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_small"
            android:background="@null"
            android:hint="0"
            android:inputType="number"
            android:textAlignment="textEnd"
            android:textSize="@dimen/sp_large"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/rub_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:text="@string/rub_sign"
            android:textSize="@dimen/sp_medium" />

        <TextView
            android:id="@+id/add_button"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_medium"
            android:layout_marginStart="@dimen/margin_medium"
            android:enabled="false"
            android:text="+"
            android:textAlignment="center"
            android:textSize="@dimen/sp_extra_large"
            tools:ignore="HardcodedText" />
    </LinearLayout>

</FrameLayout>
