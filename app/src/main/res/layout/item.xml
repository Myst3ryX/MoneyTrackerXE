<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_small">

    <RelativeLayout
        android:id="@+id/item_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_item">

        <TextView
            android:id="@+id/item_article"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/item_amount"
            android:layout_alignParentStart="true"
            android:fontFamily="sans-serif-light"
            style="@style/items_style" />

        <TextView
            android:id="@+id/item_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@id/item_article"
            android:layout_alignBottom="@id/item_article"
            android:background="@color/color_transparent_black"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            style="@style/items_style" />

    </RelativeLayout>

</FrameLayout>
